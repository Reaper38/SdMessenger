<Page x:Class="Sdm.ClientWPF.Pages.ConversationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sdm.ClientWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ConversationPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <GridSplitter Grid.RowSpan="2" Height="3"/>
        <RichTextBox Name="rtbHistory" Grid.Row="0" IsReadOnly="True"/>
        <RichTextBox Name="rtbNewMsg" Grid.Row="1"/>
    </Grid>
</Page>
